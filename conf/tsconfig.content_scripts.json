{
  "compilerOptions": {
    "target": "ES2022",
    "module": "es2022",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "strictPropertyInitialization": false,
    "strictFunctionTypes": false,
    "sourceMap": false,
    "checkJs": false,
    "outDir": "../build/_/content_scripts",
    "baseUrl": "../extension",
    "paths": {
      "dompurify": ["../node_modules/dompurify/dist/purify.cjs.d.ts"],
      "openpgp": ["../node_modules/openpgp/openpgp.d.ts"],
      "@openpgp/web-stream-tools": ["../node_modules/@openpgp/web-stream-tools/lib/index.d.ts"],
      "squire-rte": ["../node_modules/squire-rte/dist/types/Squire.d.ts"],
      "undici-types": ["../node_modules/undici-types/index.d.ts", "COMMENT"],
      "linkifyHtml": ["../node_modules/linkify-html/dist/linkify-html.d.mts", "COMMENT"],
      "linkifyjs": ["../node_modules/linkifyjs/dist/linkify.d.mts", "COMMENT"]
    },
    "typeRoots": ["../extension/types", "../extension/js/common/core/types"]
  },
  "include": ["../extension/types/*.ts", "../extension/js/content_scripts/**/*.ts", "../node_modules/sweetalert2/sweetalert2.d.ts"],
  "exclude": ["**/build/**"]
}
