{
  "compilerOptions": {
    "target": "ES2017",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "strictPropertyInitialization": true,
    "strictFunctionTypes": false,
    "sourceMap": false,
    "checkJs": false,
    "strict": true,
    "outDir": "build/generic-extension-wip",
    "baseUrl": "./extension",
    "paths": {
      "jquery": [
        "lib/jquery.min.js",
        "COMMENT"
      ],
      "sweetalert2": [
        "lib/sweetalert2.js",
        "COMMENT"
      ],
      "openpgp": [
        "lib/openpgp.js",
        "COMMENT"
      ],
      "dompurify": [
        "types/purify.d.ts",
        "lib/purify.js",
        "COMMENT"
      ],
      "fine-uploader": [
        "lib/fine-uploader.js",
        "COMMENT"
      ],
      "clipboard": [
        "lib/clipboard.js",
        "COMMENT"
      ],
      "iso-8859-2": [
        "lib/iso-8859-2.js",
        "COMMENT"
      ],
      "zxcvbn": [
        "lib/zxcvbn.js",
        "COMMENT"
      ],
      "emailjs-mime-parser": [
        "lib/emailjs/emailjs-mime-parser.js",
        "COMMENT"
      ],
      "emailjs-mime-builder": [
        "lib/emailjs/emailjs-mime-builder.js",
        "COMMENT"
      ],
      "node-forge": [
        "lib/forge.js",
        "COMMENT"
      ]
    },
    "typeRoots": [
      "./extension/js/common/core/types",
      "./extension/types"
    ]
  },
  "include": [
    "./extension/**/*.ts"
  ],
  "exclude": [
    "./extension/js/content_scripts/**/*",
    "**/build/**",
    "**/node_modules/**"
  ]
}